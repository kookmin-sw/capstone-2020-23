<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="110dp"
    android:layout_width="110dp"
    android:id="@+id/frame_savedPost">

    <androidx.cardview.widget.CardView
        android:id="@+id/savedPost_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/savedPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/savedTag"
                android:drawableLeft="@drawable/ic_favorite_result"
                android:paddingStart="5dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:background="@drawable/round_background_black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>